{
  "schema": {
    "type": "object",
    "properties": {
      "query": {
        "type": "string",
        "description": "PostgreSQL code to execute",
        "format": "code-pgsql"
      },

      "args": {
        "type": "array",
        "description": "Query arguments",
        "items": {
          "type": "object",
          "properties": {
            "key": {
              "type": "string"
            },
            "type": {
              "type": "string",
              "enum": [
                "string",
                "number",
                "boolean",
                "array (, separated)",
                "object (JSON stringified)"
              ],
              "default": "string"
            }
          },
          "required": ["key", "type"]
        }
      }
    },
    "required": ["query"]
  },
  "uischema": {
    "type": "VerticalLayout",
    "elements": [
      {
        "type": "Control",
        "scope": "#/properties/query",
        "label": "PostgreSQL Code"
      },
      {
        "type": "Control",
        "scope": "#/properties/args",
        "label": "Arguments",
        "options": {
          "detail": {
            "type": "VerticalLayout",
            "elements": [
              {
                "type": "Control",
                "scope": "#/properties/key"
              },
              {
                "type": "Control",
                "scope": "#/properties/type"
              }
            ]
          }
        }
      }
    ]
  },
  "data": {
    "query": "SELECT id, name FROM users WHERE active = true;",
    "args": [
      { "key": "user_id", "value": "123" },
      { "key": "status", "value": "active" }
    ]
  }
}
